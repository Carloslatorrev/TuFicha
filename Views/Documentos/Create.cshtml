@model TuFicha.Models.Documentos

@{
    ViewBag.Title = "Create";
}

<h2>Nuevo Documento</h2>


@using (Html.BeginForm("Create","Documentos", FormMethod.Post, new { name = "formDocs", id = "formDocs", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="hpanel">
        <div class="panel-body">
            <div class="row">
                <div class="form-horizontal">
                    <div class="col-lg-7">
                        <h4>Documentos</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Doc_Nombre, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align: left;" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Doc_Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Doc_Nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Doc_Descripcion, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align: left;" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Doc_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Doc_Descripcion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdProfesional, "Profesional Salud", htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align: left;" })
                            <div class="col-md-10">
                                @Html.DropDownList("IdProfesional", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdProfesional, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdCentroMedico, "Centro médico", htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align: left;" })
                            <div class="col-md-10">
                                @Html.DropDownList("IdCentroMedico", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdCentroMedico, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.IdTipoDocumento, "Tipo Documento", htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align: left;" })
                            <div class="col-md-10">
                                @Html.DropDownList("IdTipoDocumento", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdTipoDocumento, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="row m-t-lg m-b-lg"></div>
                                <div class="row">
                                    <p>Archivo a Cargar</p>
                                </div>
                                <div class="row">
                                    <input id="archivo" name="archivo" type="file" class="upload" />
                                </div>                                
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>

    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
