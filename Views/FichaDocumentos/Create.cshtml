@model TuFicha.Models.DocumentoFichaModelView

@{
    ViewBag.Title = "Create";
}

<h2>Documentos Ficha</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Agregar documentos a la Ficha</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IdFichaUsuario,"Ficha:", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.IdFichaUsuario, new { htmlAttributes = new { @class = "form-control", @readonly ="readonly" } })
                @Html.ValidationMessageFor(model => model.IdFichaUsuario, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">

            </div>
        </div>
        <div class="row m-l-lg">
            <div class="col-lg-10">
                <div class="form-group">
                    @Html.Partial("_DocUsuario", Model)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}
